    "version": "0.2.0",
    "configurations": [
        // To use this, is necessary run first next command in terminal: rdbg -n --open=vscode -c -- bin/rails s
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        },
        {
            "type": "rdbg",
            "name": "Debug development",
            "request": "launch",
            "command": "bin/rails",
            "script": "s", // launch rails s with debugger
            "args": [],
            "askParameters": false // Do not ask startup parameter any more
    },
    ]
}