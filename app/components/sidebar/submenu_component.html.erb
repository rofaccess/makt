<li class="submenu-item <%= @active ? 'active' : '' %>">
  <!-- Set data-turbo-stream attr in link because turbo is not enable for get requests by default -->
  <%= link_to @url, class: "submenu-link", data: { action: "click->sidebar#activateSubmenu", turbo: @turbo, turbo_stream: "" } do %>
    <% if @icon %>
      <i class="bi bi-<%= @icon %>"></i>
    <% end %>

    <span><%= @text %></span>
  <% end %>
</li>
