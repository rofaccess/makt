<li class="<%= menu_class %>">
  <%= link_to @url, class: "sidebar-link", data: { turbo: @turbo, turbo_stream: "" } do %>
    <% if @icon %>
      <i class="bi bi-<%= @icon %>"></i>
    <% end %>

    <span><%= @text %></span>
  <% end %>

  <% if submenus.any? %>
    <ul class="<%= submenu_class %>">
      <% submenus.each do |submenu| %>
        <%= submenu %>
      <% end %>
    </ul>
  <% end %>
</li>
