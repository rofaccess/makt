<%= render Menu::CollapsibleMenuComponent.new(icon: "justify", text: "Menú", id: "main-menu", position: :right) do %>
  <div class="<%= block_modifier_classes %>">
    <ul class="<%= block_class %>__header">
      <li class="<%= block_class %>__logo">
        <%= logo_tag %>
      </li>
      <li class="<%= block_class %>__settings">
        <ul>
          <li><%= render "layouts/components/theme_switcher" %></li>
          <li><%= render Menu::MenuItemComponent.new(icon: "person", text: "Mi Perfil", inline: true, size: :sm) %></li>
          <li><%= render Menu::MenuItemComponent.new(icon: "box-arrow-left", text: "Cerrar Sesión", inline: true, size: :sm) %></li>
        </ul>
      </li>
    </ul>

    <ul class="<%= block_class %>__items">
      <li class="<%= block_class %>__items-group-title" >
        Inventario
      </li>
      <li class="<%= block_class %>__items-group">
        <ul>
          <li><%= render Menu::MenuItemComponent.new(icon: "warehouse", text: "Depósito 1 - Sucursal Principal", url: root_path, turbo: true, box: true) %></li>
          <li><%= render Menu::MenuItemComponent.new(icon: "warehouse", text: "Depósito 2", box: true) %></li>
        </ul>
      </li>
      <li class="<%= block_class %>__items-group">
        <ul>
          <li><%= render Menu::MenuItemComponent.new(icon: "warehouse", text: "Depósitos", box: true) %></li>
          <li><%= render Menu::MenuItemComponent.new(icon: "boxes", text: "Productos", box: true) %></li>
          <li><%= render Menu::MenuItemComponent.new(icon: "tags", text: "Marcas", url: product_brands_path, turbo: true, box: true) %></li>
        </ul>
      </li>
      <li class="<%= block_class %>__items-group-title" >
        Configuración
      </li>
      <li class="<%= block_class %>__items-group">
        <ul>
          <li><%= render Menu::MenuItemComponent.new(icon: "people", text: "Usuarios", box: true) %></li>
        </ul>
      </li>
    </ul>
  </div>
<% end %>
