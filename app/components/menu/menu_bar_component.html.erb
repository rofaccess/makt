<nav class="<%= block_modifier_classes %>" data-controller="menu">
  <ul>
    <li>
      <%= home if home? %>
    </li>

    <li class="<%= block_class %>__shortcuts" data-action="mousewheel->menu#runShortcutsMouseWheelHorizontalScrolling">
      <ul>
        <% if shortcuts.any? %>
          <% shortcuts.each do |shortcut| %>
            <li>
              <%= shortcut %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </li>

    <li>
      <%= main_menu if main_menu? %>
    </li>
  </ul>
</nav>
