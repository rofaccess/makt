<!DOCTYPE html>
<html>
  <head>
    <title>MaKT</title>
    <%= favicon_logo_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <!-- <meta name="theme-color" content="#1f8ec2"> -->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <%= render Menu::MenuBarComponent.new do |menu_bar| %>
      <% menu_bar.with_home(icon: "dashboard", text: "Inicio", url: root_path, data: { turbo: true }) %>

      <% menu_bar.with_shortcuts([
        { icon: "warehouse", text: "DepÃ³sitos" },
        { icon: "boxes", text: "Productos" },
        { icon: "arrow-repeat", text: "Movimientos" },
        { icon: "tags", text: "Marcas", url: product_brands_path, data: { turbo: true } },
      ]) %>

      <% menu_bar.with_main_menu %>
    <% end %>

    <header id="header" class="c-main-content-header">
      <%= yield :header %>
    </header>

    <main id="main" class="c-main-content">
      <%= yield %>
    </main>
  </body>
</html>
